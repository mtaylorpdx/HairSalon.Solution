@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Edit Stylist Entry for: @Html.DisplayFor(model => model.StylistName)</h4>
<hr>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)
  <p>Stylist's Name: @Html.EditorFor(model => model.StylistName)</p>
  <p>Stylist's Phone Number: @Html.EditorFor(model => model.StylistPhone)</p>
  <p>Stylist's Specialty: @Html.EditorFor(model => model.Specialty)</p>
  <hr>
  <input type="submit" value="Save" class="btn btn-outline-info my-2 my-sm-0"/>
}
<br>
<p>@Html.ActionLink("Back to stylists", "Index") | @Html.ActionLink("Home", "Index", "Home")</p>