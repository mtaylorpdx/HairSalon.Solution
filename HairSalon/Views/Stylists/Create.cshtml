@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4 class="text-center">Add a Stylist</h4>
<hr>
<div class="col-md-6 offset-md-3">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      <p>Stylist's Name:
      @Html.TextBoxFor(model => model.StylistName, new { @class = "form-control", required = "required"})</p>
    </div>
    <div class="form-group">
      <p>Stylist's Phone Number:
      @Html.TextBoxFor(model => model.StylistPhone, new { @class = "form-control", required = "required"})</p>
    </div>
    <div class="form-group">
      <p>Stylist's Speciality:
      @Html.TextBoxFor(model => model.Specialty, new { @class = "form-control"})</p>
    </div>
    <input type="submit" value="Add this Stylist" class="btn btn-outline-info my-2 my-sm-0">
  }
</div>

<p>@Html.ActionLink("Home", "Index", "Home")</p>