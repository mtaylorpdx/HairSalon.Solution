@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4 class="text-center">Add a Stylist</h4>

  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.StylistName)
      @Html.TextBoxFor(model => model.StylistName, new { @class = "form-control", required = "required"})
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.StylistPhone)
      @Html.TextBoxFor(model => model.StylistPhone, new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Specialty)
      @Html.TextBoxFor(model => model.Specialty, new { @class = "form-control"})
    </div>

    <input type="submit" value="Add a Stylist" class="btn btn-outline-info my-2 my-sm-0">
  }
</div>