@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit Client Details</h2>
<h4 class="text-center">Edit this entry: @Html.DisplayFor(model => model.ClientName)</h4>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.HiddenFor(model => model.ClientId)
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.ClientName)
    @Html.EditorFor(model => model.ClientName, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.EditorFor(model => model.PhoneNumber, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
  </div>
    <input type="submit" value="Save" class="btn btn-default">
}

<p>@Html.ActionLink("Back to list", "Index")</p>