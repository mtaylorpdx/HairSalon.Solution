@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4 class="text-center">Add a new Client</h4>
<hr>
<div class="col-md-6 offset-md-3">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      Client's Name: @Html.TextBoxFor(model => model.ClientName, new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      Client's Phone Number: @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      Choose a stylist for this client: @Html.DropDownList("StylistId")
    </div>

    <input type="submit" value="Add this Client" class="btn btn-outline-info my-2 my-sm-0">
  }
</div>