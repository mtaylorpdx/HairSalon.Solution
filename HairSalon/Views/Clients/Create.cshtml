@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4 class="text-center">Add a new Client</h4>

  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.ClientName)
      @Html.TextBoxFor(model => model.ClientName, new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.PhoneNumber)
      @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")
    </div>

    <input type="submit" value="Add a Stylist" class="btn btn-outline-success my-2 my-sm-0">
  }
</div>